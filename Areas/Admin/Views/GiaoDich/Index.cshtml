@model IEnumerable<VAYTIEN.Models.GiaoDich>
@{
    ViewData["Title"] = "Lịch sử Giao dịch Toàn hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .modern-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
        overflow: hidden;
        border: none;
        position: relative;
    }

        .modern-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4);
            background-size: 300% 100%;
            animation: gradientShift 3s ease infinite;
        }

    @@keyframes gradientShift {
        0%, 100%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    }

    .card-header-modern {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: none;
        padding: 2rem;
        position: relative;
    }

    .title-modern {
        font-size: 1.75rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .icon-modern {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
    }

    .table-modern {
        background: white;
        border-radius: 0;
        overflow: hidden;
        margin: 0;
    }

        .table-modern thead th {
            background: linear-gradient(135deg, #f8f9ff, #e3e8ff);
            border: none;
            padding: 1.5rem 1rem;
            font-weight: 600;
            color: #4a5568;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            position: relative;
        }

            .table-modern thead th::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 2px;
                background: linear-gradient(90deg, transparent, #667eea, transparent);
            }

        .table-modern tbody tr {
            border: none;
            transition: all 0.3s ease;
            position: relative;
        }

            .table-modern tbody tr:hover {
                background: linear-gradient(135deg, #f8f9ff, #fff);
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.1);
            }

            .table-modern tbody tr::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 1rem;
                right: 1rem;
                height: 1px;
                background: linear-gradient(90deg, transparent, #e2e8f0, transparent);
            }

            .table-modern tbody tr:last-child::after {
                display: none;
            }

        .table-modern td {
            border: none;
            padding: 1.5rem 1rem;
            vertical-align: middle;
        }

    .transaction-id {
        font-weight: 700;
        color: #2d3748;
        font-size: 0.95rem;
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: linear-gradient(135deg, #e6fffa, #b2f5ea);
        border-radius: 8px;
        border-left: 3px solid #4ecdc4;
    }

    .account-info {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .account-number {
        font-weight: 600;
        color: #2d3748;
        font-size: 0.95rem;
    }

    .account-holder {
        color: #718096;
        font-size: 0.8rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .account-holder::before {
            content: '👤';
            font-size: 0.7rem;
        }

    .date-display {
        font-weight: 500;
        color: #4a5568;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .date-display::before {
            content: '📅';
            font-size: 0.8rem;
        }

    .amount-positive {
        font-weight: 700;
        color: #38a169;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        justify-content: flex-end;
    }

        .amount-positive::before {
            content: '↗️';
            font-size: 0.8rem;
        }

    .amount-negative {
        font-weight: 700;
        color: #e53e3e;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        justify-content: flex-end;
    }

        .amount-negative::before {
            content: '↘️';
            font-size: 0.8rem;
        }

    .amount-neutral {
        font-weight: 500;
        color: #4a5568;
        text-align: right;
    }

    .badge-modern {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 2px solid transparent;
        transition: all 0.3s ease;
    }

    .badge-success {
        background: linear-gradient(135deg, #48bb78, #38a169);
        color: white;
    }

        .badge-success::before {
            content: '✅';
            font-size: 0.7rem;
        }

    .badge-danger {
        background: linear-gradient(135deg, #f56565, #e53e3e);
        color: white;
    }

        .badge-danger::before {
            content: '💸';
            font-size: 0.7rem;
        }

    .badge-secondary {
        background: linear-gradient(135deg, #a0aec0, #718096);
        color: white;
    }

        .badge-secondary::before {
            content: '📋';
            font-size: 0.7rem;
        }

    .content-description {
        color: #718096;
        font-size: 0.9rem;
        line-height: 1.4;
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .card-footer-modern {
        background: linear-gradient(135deg, #f7fafc, #edf2f7);
        border: none;
        padding: 1.5rem 2rem;
        color: #718096;
        font-weight: 500;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .stats-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .stats-info::before {
            content: '📊';
            font-size: 1rem;
        }

    .loading-shimmer {
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
    }

    @@keyframes shimmer {
        0%

    {
        background-position: -200% 0;
    }

    100% {
        background-position: 200% 0;
    }

    }

    .table-container {
        position: relative;
        overflow: hidden;
    }

        .table-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
            animation: tableShine 3s infinite;
            z-index: 1;
            pointer-events: none;
        }

    @@keyframes tableShine {
        0%

    {
        left: -100%;
    }

    50% {
        left: -100%;
    }

    100% {
        left: 100%;
    }

    }

    @@media (max-width: 768px) {
        .modern-card

    {
        margin: 0.5rem;
        border-radius: 15px;
    }

    .card-header-modern {
        padding: 1.5rem;
    }

    .title-modern {
        font-size: 1.4rem;
    }

    .table-modern {
        font-size: 0.85rem;
    }

        .table-modern td,
        .table-modern th {
            padding: 1rem 0.5rem;
        }

    }

    .scroll-indicator {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 40px;
        height: 4px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 2px;
        opacity: 0.7;
    }
</style>

<div class="modern-card">
    <div class="card-header-modern">
        <div class="title-modern">
            <div class="icon-modern">
                <i class="bi bi-clock-history"></i>
            </div>
            @ViewData["Title"]
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-modern align-middle mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Mã GD</th>
                            <th>Tài Khoản Ghi Nhận</th>
                            <th>Ngày Giao Dịch</th>
                            <th class="text-end">Số Tiền</th>
                            <th class="text-center">Loại Giao Dịch</th>
                            <th class="pe-4">Nội Dung</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="transaction-id">#@item.MaGiaoDich</span>
                                </td>
                                <td>
                                    @if (item.MaTaiKhoanNavigation != null)
                                    {
                                        <div class="account-info">
                                            <div class="account-number">@item.MaTaiKhoanNavigation.SoTaiKhoan</div>
                                            <div class="account-holder">
                                                @item.MaTaiKhoanNavigation.MaKhNavigation?.HoTen
                                            </div>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="date-display">@item.NgayGd.ToString("dd/MM/yyyy")</div>
                                </td>
                                <td>
                                    @if (item.LoaiGd == "Thu nợ")
                                    {
                                        <div class="amount-positive">+ @item.SoTienGd.ToString("N0") VNĐ</div>
                                    }
                                    else if (item.LoaiGd == "Giải ngân")
                                    {
                                        <div class="amount-negative">- @item.SoTienGd.ToString("N0") VNĐ</div>
                                    }
                                    else
                                    {
                                        <div class="amount-neutral">@item.SoTienGd.ToString("N0") VNĐ</div>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.LoaiGd == "Thu nợ")
                                    {
                                        <span class="badge-modern badge-success">@item.LoaiGd</span>
                                    }
                                    else if (item.LoaiGd == "Giải ngân")
                                    {
                                        <span class="badge-modern badge-danger">@item.LoaiGd</span>
                                    }
                                    else
                                    {
                                        <span class="badge-modern badge-secondary">@item.LoaiGd</span>
                                    }
                                </td>
                                <td class="pe-4">
                                    <div class="content-description" title="@item.NoiDungGd">@item.NoiDungGd</div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="scroll-indicator"></div>
        </div>
    </div>

    <div class="card-footer-modern">
        <div class="stats-info">
            Hiển thị @Model.Count() giao dịch gần nhất.
        </div>
        <div class="text-muted small">
            Cập nhật: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
        </div>
    </div>
</div>