@{
    ViewData["Title"] = "Gửi yêu cầu thành công";
}

<style>
    .success-page {
        min-height: 70vh;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        margin: 0 auto;
    }

    .success-card {
        max-width: 600px;
        width: 100%;
        margin: 0 auto;
        border: 0;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .success-icon {
        animation: bounce 1s ease-in-out;
    }

    @@keyframes bounce {
        0%, 20%, 60%, 100%

    {
        transform: translateY(0);
    }

    40% {
        transform: translateY(-10px);
    }

    80% {
        transform: translateY(-5px);
    }

    }

    .timeline {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        margin: 20px 0;
        text-align: left;
    }

    .timeline-item {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
        font-size: 14px;
    }

        .timeline-item:last-child {
            margin-bottom: 0;
        }

    .timeline-icon {
        width: 18px;
        height: 18px;
        border-radius: 50%;
        margin-right: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
    }

    .completed {
        background: #28a745;
        color: white;
    }

    .pending {
        background: #ffc107;
        color: white;
    }
</style>

<div class="container success-page">
    <div class="success-card card p-5 text-center">
        <div class="mb-4">
            <i class="fas fa-check-circle fa-4x text-success success-icon"></i>
        </div>

        <h2 class="text-success mb-3 fw-bold">Gửi yêu cầu vay vốn thành công!</h2>

        <p class="mb-4 text-muted">
            🎉 Cảm ơn bạn đã tin tưởng dịch vụ của chúng tôi.<br />
            Hệ thống đã ghi nhận thông tin và yêu cầu của bạn.
        </p>

        <!-- Timeline tiến trình -->
        <div class="timeline">
            <h6 class="fw-bold mb-3">Tiến trình xử lý:</h6>
            <div class="timeline-item">
                <div class="timeline-icon completed">
                    <i class="fas fa-check fa-xs"></i>
                </div>
                <span>Đã nhận yêu cầu vay vốn</span>
            </div>
            <div class="timeline-item">
                <div class="timeline-icon pending">
                    <i class="fas fa-clock fa-xs"></i>
                </div>
                <span>Đang xem xét và thẩm định hồ sơ</span>
            </div>
            <div class="timeline-item">
                <div class="timeline-icon pending">
                    <i class="fas fa-phone fa-xs"></i>
                </div>
                <span>Liên hệ xác nhận thông tin</span>
            </div>
            <div class="timeline-item">
                <div class="timeline-icon pending">
                    <i class="fas fa-handshake fa-xs"></i>
                </div>
                <span>Phê duyệt và giải ngân</span>
            </div>
        </div>

        <div class="alert alert-info border-0 mb-4">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Thời gian xử lý:</strong> 1-3 ngày làm việc<br>
            <strong>Liên hệ hỗ trợ:</strong> 1900-xxxx hoặc support@example.com
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <a href="#" class="btn btn-primary px-4 me-md-2">
                <i class="fas fa-home me-2"></i>Quay về Trang chủ
            </a>
            <a href="#" class="btn btn-outline-secondary px-4">
                <i class="fas fa-history me-2"></i>Theo dõi yêu cầu
            </a>
        </div>

        <div class="mt-4 pt-3 border-top">
            <small class="text-muted">
                Mã yêu cầu: <strong>#YC2025061501</strong> -
                Thời gian: <strong id="current-time"></strong>
            </small>
        </div>
    </div>
</div>

<script>
    // Hiển thị thời gian hiện tại
    document.addEventListener('DOMContentLoaded', function() {
        const timeElement = document.getElementById('current-time');
        if (timeElement) {
            timeElement.textContent = new Date().toLocaleString('vi-VN');
        }
    });
</script>